= form_for @directory do |f|
  - if @directory.errors.any?
    #error_explanation
      %h2= "#{pluralize(@directory.errors.count, "error")} prohibited this directory from being saved:"
      %ul
        - @directory.errors.full_messages.each do |msg|
          %li= msg
  
  .form-group
    %p
    = f.label :name
    = f.text_field :name, :class => 'form-control'
    %p
  .form-group
    %p
    = f.label :address
    = f.text_field :address, :class => 'form-control'
    %p
  .form-group
    %p
    = f.label :phone
    = f.text_field :phone, :class => 'form-control'
    %p
  .form-group
    %p
    = f.label :descripcion
    = f.text_area :descripcion, :class => 'form-control'
    %p   


    = f.submit 'Crear', :class => 'btn btn-default'  


%select#example-enableClickableOptGroups{:multiple => "multiple", :style => "display: none;"}
  %optgroup{:label => "Group 1"}
    %option{:value => "1-1"} Option 1.1
    %option{:selected => "selected", :value => "1-2"} Option 1.2
    %option{:selected => "selected", :value => "1-3"} Option 1.3
  %optgroup{:label => "Group 2"}
    %option{:value => "2-1"} Option 2.1
    %option{:value => "2-2"} Option 2.2
    %option{:value => "2-3"} Option 2.3

