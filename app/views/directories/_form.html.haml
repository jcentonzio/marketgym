= nested_form_for @directory do |f|
  - if @directory.errors.any?
    #error_explanation
      %h2= "#{pluralize(@directory.errors.count, "error")} prohibited this directory from being saved:"
      %ul
        - @directory.errors.full_messages.each do |msg|
          %li= msg
  
  .form-group
    %p
    = f.label :name
    = f.text_field :name, :class => 'form-control'
    %p
  .form-group
    %p
    = f.label :address
    = f.text_field :address, :class => 'form-control'
    %p
  .form-group
    %p
    = f.label :phone
    = f.text_field :phone, :class => 'form-control'
    %p
  .form-group
    %p
    = f.label :descripcion
    = f.text_area :descripcion, :class => 'form-control'
    %p

  .form-group
    %p
      = f.grouped_collection_select :sitem_ids, @services, :sitems, :name, :id, :name, {}, {:class => "multiselect", :multiple => "multiple", :id => "example-enableClickableOptGroups" }

     
    = f.submit 'Crear', :class => 'btn btn-default'  
