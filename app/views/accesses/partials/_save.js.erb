$("ul.errors").html("")
<% if @access.errors.any? %>
  <% @access.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".access-index").html("<%= escape_javascript(render '/accesses/partials/index') %>")
  $("#access-modal").modal("hide")
<% end %>