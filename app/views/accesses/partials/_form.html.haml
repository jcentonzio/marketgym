= form_for(@access, remote: true, html: {role: :form, 'data-model' => 'access'}) do |f|
  
  %ul.errors


  .row
    .col-md-12
      .form-group
        = f.label :type_access_id
        = f.select :type_access_id, TypeAccess.all.map{ |c| [c.name, c.id] }, { :prompt => "Por favor, seleccionar una opción"}, :class => 'form-control'  
        %span.help-block

  
  .row
    .col-md-12
      .form-group
        = f.label :price
        = f.text_field :price, :class => 'form-control'
        %span.help-block
          
  .row
    .col-md-12
      .form-group
        = f.label :offer_price
        = f.text_field :offer_price, :class => 'form-control'
        %span.help-block

  .row
    .col-md-12
      .form-group
        = f.label :star_date
        #datetimepicker1.input-group.date
          = f.text_field :star_date, :class => 'form-control datepicker'
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        %span.help-block    
  .row
    .col-md-12
      .form-group
        = f.label :end_date
        #datetimepicker1.input-group.date
          = f.text_field :end_date, :class => 'form-control datepicker'
          %span.input-group-addon
            %span.glyphicon.glyphicon-calendar
        %span.help-block
  
  .row
    .col-md-12
      .form-group
        = f.label :state
        = f.select :state, [['Habilitado', true], ['Deshabilitado', false]], {}, :class => 'form-control'
        %span.help-block    
                             
  .actions
    = f.submit 'Crear promoción', class: "btn btn-primary btn-lg"
