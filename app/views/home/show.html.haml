%h1 
  = @directory.name
  .row
    .col-md-8
      = image_tag "pgym.jpg"
    .col-md-4.text-center
      = form_tag(cart_url, :method => "get") do
        .btn-group-vertical.btn-block{"data-toggle" => "buttons"}
          - @directory.accesses.each do |access|
            %label.btn.btn-primary
              %input#option1{:autocomplete => "off", :name => "id", :value => access.id,  :type => "radio"}                
                .row
                  .col-md-8.text-left 
                    %h4
                      = access.type_access.name
                  .col-md-4.text-left 
                    %h4
                      = clp(access.price)
                  
        = submit_tag 'COMPRAR', class: "btn btn-extra btn-lg btn-block"        


.row
  .col-md-8
    .well 
      .row
        .col-md-6
          %span.section-title Descripción 
          = @directory.description.html_safe  
        .col-md-6
          %span.section-title Condiciones
          = @directory.terms
      .row
        .col-md-12
          %span.section-title Servicios del gimnasio
          .list-group
            %a.list-group-item.disabled{:href => "#"}
              Fitness & Gym
              - @fits.each do |sitem|  
                %a.list-group-item{:href => "#"}
                  %span.badge
                    %span.glyphicon.glyphicon-ok
                  = sitem.name
          .list-group
            %a.list-group-item.disabled{:href => "#"}
              Wellness & Spa
              - @Wells.each do |sitem|  
                %a.list-group-item{:href => "#"}
                  %span.badge
                    %span.glyphicon.glyphicon-ok
                  = sitem.name                  
          .list-group
            %a.list-group-item.disabled{:href => "#"}
              Actividades dirigidas
              - @actis.each do |sitem|  
                %a.list-group-item{:href => "#"}
                  %span.badge
                    %span.glyphicon.glyphicon-ok
                  = sitem.name
          .list-group
            %a.list-group-item.disabled{:href => "#"}
              Masajes & Belleza
              - @spas.each do |sitem|  
                %a.list-group-item{:href => "#"}
                  %span.badge
                    %span.glyphicon.glyphicon-ok
                  = sitem.name
          .list-group
            %a.list-group-item.disabled{:href => "#"}
              Servicios
              - @servs.each do |sitem|  
                %a.list-group-item{:href => "#"}
                  %span.badge
                    %span.glyphicon.glyphicon-ok
                  = sitem.name                                 

         
  .col-md-4
    .well
      %span.section-title Mapa
      %span.section-title Otros gimnasios

- if @access 
  #myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} ×
          %h4#myModalLabel.modal-title Forma de pago
        .modal-body
          %h4
            %strong 
              = @access.directory.name
          %h5 
            %p 
              %strong Tipo de pase: 
              = @access.type_access.name
            %p
              %strong Total a pagar: 
              = clp(@access.price)
          %br  
          = image_tag ("transbank.jpg")
        .modal-footer
          %button.btn.btn-extra.btn-lg{:type => "button"} REALIZAR PAGO  







  



 
